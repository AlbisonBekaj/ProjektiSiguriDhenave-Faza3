<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.ChangePasswordController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Change Password" />

            <PasswordField fx:id="currentPasswordField" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" promptText="Current Password" />
            <PasswordField fx:id="newPasswordField" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" promptText="New Password" />
            <PasswordField fx:id="confirmPasswordField" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" promptText="Confirm New Password" />

            <Label fx:id="statusLabel" maxWidth="300" textFill="red" wrapText="true" />

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="changePasswordButton" onAction="#handleChangePasswordClick" text="Change Password" />
                <Button onAction="#handleBackClick" text="Back" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
