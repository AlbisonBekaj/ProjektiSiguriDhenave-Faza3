<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChangePasswordController"
            prefWidth="400" prefHeight="350">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <Label text="Change Password" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <PasswordField fx:id="currentPasswordField" promptText="Current Password" />
            <PasswordField fx:id="newPasswordField" promptText="New Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" />

            <Label fx:id="statusLabel" textFill="red" wrapText="true" maxWidth="300"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="changePasswordButton" text="Change Password" onAction="#handleChangePasswordClick"/>
                <Button text="Back" onAction="#handleBackClick"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
